@page
@model practicasASPNET.Pages.Programa2Model
@{
}

<div class="row">
    <div class="col-lg-7 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Código Julio César</h2>

        <form method="post">
            <!--Entrada-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Ingrese el texto a trabajar: </label>
                <div class="col-sm-8">
                    <input class="form-control" required asp-for="entrada"/>
                </div>
            </div>

            <!--Valor de n-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Ingrese el valor de <strong>n</strong>: </label>
                <div class="col-sm-4">
                    <input class="form-control" required type = "number" asp-for="n"/>
                </div>
            </div>

            <!--select-->
            <div class="row mb-3">
                <center>
                    <div class="col-sm-4">
                        <select asp-for="metodo">
                            <option>Codificar entrada</option>
                            <option>Decodificar entrada</option>
                        </select>
                    </div>
                </center>
            </div>

            <!--Div para boton-->
            <div class="row">
                <center>
                    <button type="submit" class="btn btn-primary">Codificar</button>
                </center>
            </div>
        </form>

        <br />
        <br />

        <!--Div para Resultados-->
        <div class="row mb-3">
            <label class="col-sm-6 col-form-label">@Model.salida </label>
        </div>
    </div>
</div>