@page
@model practicasASPNET.Pages.Programa3Model
@{
}

<div class="row">
    <div class="col-lg-7 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Evaluación de la expresión <br /> (ax + by)^n</h2>

        <h6>Para la evaluación se utilizará la igualdad: </h6>
        <center>
            <img src="~/img/formula.png" />
        </center>
        <br />
        <br />

        <form method="post">
            <!--Entrada-->
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Ingrese el valor de a: </label>
                <div class="col-sm-2">
                    <input class="form-control" type="number" required asp-for="a"/>
                </div>
                <label class="col-sm-1 col-form-label"></label>
                <label class="col-sm-3 col-form-label">Ingrese el valor de b: </label>
                <div class="col-sm-2">
                    <input class="form-control" type="number" required asp-for="b" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Ingrese el valor de x: </label>
                <div class="col-sm-2">
                    <input class="form-control" type="number" required asp-for="x" />
                </div>
                <label class="col-sm-1 col-form-label"></label>
                <label class="col-sm-3 col-form-label">Ingrese el valor de y: </label>
                <div class="col-sm-2">
                    <input class="form-control" type="number" required asp-for="y" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Ingrese el valor de n: </label>
                <div class="col-sm-2">
                    <input class="form-control" type="number" required asp-for="n" />
                </div>
            </div>

            <br />

            <!--Div para boton-->
            <div class="row">
                <center>
                    <button type="submit" class="btn btn-primary">Calcular</button>
                </center>
            </div>
        </form>

        <br />
        <br />

        <!--Div para Resultados-->
        <div class="row mb-3">
            <label class="col-sm-6 col-form-label"><strong>El resultado es: </strong>@Model.res</label>
        </div>
    </div>
</div>